<style type="text/css">
  body {
    background-image: url("/img/bg.jpg");
  }
</style>
<% @page_title = "Signup" %>
<div class="container" id="login-block">
    		<div class="row">
			    <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
			    	 
			       <div class="login-box clearfix animated flipInY">
			       		<div class="page-icon animated bounceInDown">
			       			<img src="img/register-icon.png" alt="Register icon" />
			       		</div>
			        	<div class="login-logo">
			        		<img src="img/login-logo.png" alt="Company Logo" />
			        	</div> 
			        	<hr />
			        	<div class="login-form">
			        		<!-- Start Error box -->
			        		<% if @user.errors.any? %>
							    <div class="alert alert-danger">
							        <button type="button" class="close" data-dismiss="alert"> &times;</button>
							        <h4>Error!</h4>
							        <% for message_error in @user.errors.full_messages %>
							        	<%= message_error %><br>
							        <% end %> 
							    </div> <!-- End Error box -->
							 <% end %>
							<%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
								<%= f.text_field :name, :class=>"input-field", :placeholder=>"Name"%>
								<%= f.text_field :email, :class=>"input-field", :placeholder=>"E-mail"%> 
								<%= f.text_field :username, :class=>"input-field", :placeholder=>"Username"%>
								<%= f.password_field :password, :class=>"input-field", :placeholder=>"Password"%>
								<%= f.password_field :password_confirmation, :class=>"input-field", :placeholder=>"Confirm Password"%>
								<%= f.submit :Signup, :class=>"btn btn-login" %>
							<% end %>
			        		<div class="login-links"> 
					            <%if admin?%>
					            	<%= link_to 'Back', users_path %>	
					            <%else%>
						            <a href="/login">
						             Already have an account?  <strong>Sign In</strong>
						            </a>
					            <%end%>
							</div>      		
			        	</div> 
			       </div>
			    </div>
			</div>
    	</div>
    	 
        <!-- End Login box -->