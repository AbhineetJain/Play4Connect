<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert"> &times;</button>
        <h4>Error!</h4>
        <% for message_error in @user.errors.full_messages %>
        <%= message_error %><br>
        <% end %> 
    </div> <!-- End Error box -->
  <% end %>
  
  <div class="field">
    <%= f.label :name, :class=>"control-label"%><br>
    <%= f.text_field :name, :class=>"form-control" %>
  </div>
  <div class="field">
    <%= f.label :email, :class=>"control-label" %><br>
    <%= f.text_field :email, :class=>"form-control" %>
  </div>
  <div class="field">
    <%= f.label :username, :class=>"control-label" %><br>
    <%= f.text_field :username, :class=>"form-control" %>
  </div>
  <div class="field">
    <%= f.label :password, :class=>"control-label" %><br>
    <%= f.password_field :password, :class=>"form-control" %>
  </div>
  <div class="field">
    <%= f.label :confirm_password, :class=>"control-label" %><br>
    <%= f.password_field :password_confirmation, :class=>"form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :class=>"btn btn-sm btn-success" %>  
  </div>
<% end %>