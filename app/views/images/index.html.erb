<%@page_title = "Images Index"%>
<%= render 'layout'%>
<div class="container">
<p>
<%= link_to 'Add New Image', new_image_path, :class=>'new_link' %>
</p>
<div class="row">
  <table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Tag</th>
      <th>Image</th>
      <th>Filename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.tag %></td>
        <td><%= image_tag("/images/code_image/#{image.id}", :alt => "Image", :class => "img-small") %></td>
        <td><%= image.filename %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>